<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css2?family=Mirza:wght@500&family=Notable&family=Sansita+Swashed:wght@600&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - Harry Angel's Garage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>

        body {
            background-image: url(/Content/garagebg.png);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
        }

        .navbar-default {
            background-color: #8dc5f0 !important;
            background-image: none;
            border-color: #8dc5f0 !important;
            background-repeat: no-repeat;
        }

        .logo-picture {
            display: block;
            vertical-align: middle;
            margin-top: 100px;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }

        h1 {
            color: blue;
        }

        li {
            font-family: 'Mirza', sans-serif;
            font-size: 15px;
            font-weight: 600;
            color: red;
        }

        a {
            color: white;
            font-weight: 900;
        }

        p {
            color: white;
            font-family: 'Mirza', sans-serif;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("H. A. Garage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Klienci", "Index", "Client")</li>
                    <li>@Html.ActionLink("Samochody", "Index", "Car")</li>
                    <li>@Html.ActionLink("Nasi pracownicy", "Index", "Worker")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Harry Angel's Garage</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
